[user]
	email = chris.c.hoffman@gmail.com
	name = Chris Hoffman
[core]
	excludesFile = /home/sir/.gitignore_global
[interactive]
  singlekey = true # auto-enter during git add -p
[alias]
  prune = git remote prune origin
  r = rebase
	rc = rebase --continue # faster rebasing
  ri = rebase -i origin/master
  cpc = cherry-pick --continue
  s = status
  co = checkout
  cm = commit -m 
  m = merge
  p = push origin HEAD # pushes current branch to origin w/ same name
  pforce = push origin +HEAD
  pdel = push origin --delete
  b = branch
  f = fetch -p
  url =! bash -c 'git config --get remote.origin.url | sed -E "s/.+:\\(.+\\)\\.git$/https:\\\\/\\\\/github\\\\.com\\\\/\\\\1/g"'
  patch = add -p
[push]
	default = simple # might be required for ^?
[merge]
  ff = false
